extends ./layout/index

block content
  main.container.mt-5
    .row
      .col-md-5
        img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="viaje", class="img-fluid")
      .col-md-7
        h1 #{viaje.titulo}
        p
              svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='22' height='22' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round' class="mr-2")
                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                path(d='M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z')
                path(d='M16 3l0 4')
                path(d='M8 3l0 4')
                path(d='M4 11l16 0')
                path(d='M8 15h2v2h-2z')

              | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}

        p
          svg.icon.icon-tabler.icon-tabler-cash-banknote(xmlns='http://www.w3.org/2000/svg' width='22' height='22' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round' class="mr-2")
            path(stroke='none' d='M0 0h24v24H0z' fill='none')
            path(d='M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0')
            path(d='M3 6m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z')
            path(d='M18 12l.01 0')
            path(d='M6 12l.01 0')

          | Desde $#{viaje.precio}
        
        p
          svg.icon.icon-tabler.icon-tabler-ticket(xmlns='http://www.w3.org/2000/svg' width='22' height='22' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round' class="mr-2")
            path(stroke='none' d='M0 0h24v24H0z' fill='none')
            path(d='M15 5l0 2')
            path(d='M15 11l0 2')
            path(d='M15 17l0 2')
            path(d='M5 5h14a2 2 0 0 1 2 2v3a2 2 0 0 0 0 4v3a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-3a2 2 0 0 0 0 -4v-3a2 2 0 0 1 2 -2')

          | #{viaje.disponibles} Disponibles
        
        p= viaje.descripcion